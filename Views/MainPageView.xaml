<UserControl x:Class="Kune.Views.MainPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kune.Views"
             xmlns:views="clr-namespace:Kune.Views"
             xmlns:vms="clr-namespace:Kune.ViewModels"
             mc:Ignorable="d" d:DesignWidth="750" Height="740">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style TargetType="TextBox" x:Key="TextBox">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border Name="Border"
                                CornerRadius="5"
                                Padding="2"
                                BorderThickness="2">
                            <Border.Background>
                                <SolidColorBrush Color="White" />
                            </Border.Background>
                            <Border.BorderBrush>
                                <SolidColorBrush Color="Black" />
                            </Border.BorderBrush>
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="RadioButton" x:Key="RadioBut">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <ControlTemplate x:Key="Button" TargetType="Button">
            <Border Name="Border"
                                CornerRadius="5"
                                Padding="2"
                                BorderThickness="1"
                                TextBlock.Foreground="Black"
                                TextBlock.FontSize="20"
                                TextBlock.FontFamily="Verdana">
                <Border.Background>
                    <SolidColorBrush Color="#98C793"/>
                </Border.Background>
                <Border.BorderBrush>
                    <SolidColorBrush Color="Black"/>
                </Border.BorderBrush>
                <ContentPresenter Margin="2"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" 
                                        TargetName="Border"
                                        Value="#8CCB5E"/>
                </Trigger>
                <Trigger Property="Button.IsPressed" Value="True">
                    <Setter Property="Background" 
                                        TargetName="Border"
                                        Value="#8CCB5E"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style TargetType="CheckBox" x:Key="CheckBox">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Verdana"/>
        </Style>
    </UserControl.Resources>
    <Grid Width="750">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Поиск наибольшего паросочетания через алгоритм Куна для двудольного дграфа"
                   Style="{StaticResource TextBlock}"
                   HorizontalAlignment ="Center"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   FontSize="23" Width="667"/>

        <RadioButton Content="Матрица смежности" 
                     Grid.Row="1"
                     Style="{StaticResource RadioBut}"
                     Margin="76,15,424,15"
                     IsChecked="{Binding FirstCheckbox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <RadioButton Content="Список смежности"
                     Style="{StaticResource RadioBut}"
                     Grid.Row="1"
                     Margin="428,15,72,15"
                     IsChecked="{Binding SecondCheckbox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Ввод данных"
                   Grid.Row="2" 
                   Style="{StaticResource TextBlock}"
                   Margin="84,10,523,257"/>
        <TextBox Text="{Binding InputGraph, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Row="2" 
                 AcceptsReturn="True"
                 Style="{StaticResource TextBox}"
                 Margin="22,48,424,20"/>
        <Border Grid.Row="2" CornerRadius="5" 
                BorderThickness="1"
                BorderBrush="Black" Margin="375,26,42,15">
            <Grid>
                <TextBlock Text="Пример ввода митрицы:" 
                   Style="{StaticResource TextBlock}" Margin="29,10,29,217"
                   />
                <TextBlock Style="{StaticResource TextBlock}" 
                           Margin="108,43,148,132" >
                    <Run Text="0 1 0"/><LineBreak/>
                    <Run Text="0 0 0"/><LineBreak/>
                    <Run Text="0 1 0"/>
                </TextBlock>
                <TextBlock 
                   Style="{StaticResource TextBlock}" 
                    Margin="29,128,29,103"
                    Text="Пример ввода списка: ">
                </TextBlock>
                <TextBlock Style="{StaticResource TextBlock}" 
                           Margin="108,169,165,30">
                    <Run Language="ru-ru" Text="1 2"/>
                    <LineBreak/><Run Text="3 2"/>
                </TextBlock>
            </Grid>
        </Border>


        <Button x:Name="input"
                Command="{Binding InputCommand}"
                Content="Загрузить файл"
                Template="{StaticResource Button}"
                Grid.Row="3"
                Margin="428,16,72,14"/>
        <Button x:Name="outputBriefRecord"
                Command="{Binding StartAlgorithmCommand}"
                Content="Вывести ответ"
                Template="{StaticResource Button}"
                Grid.Row="3"
                Margin="49,16,451,14"/>

        <Button x:Name="outputFullRecord"
                Command="{Binding OutputCommand}"
                Content="Отправить файл"
                Template="{StaticResource Button}"
                Grid.Row="4" 
                Margin="428,78,72,62"/>
        <TextBlock Grid.Row="4"
                   Margin="22,12,336,100" 
                   Text="{Binding BriefResult}"
                   Style="{StaticResource TextBlock}"/>
        <TextBlock Grid.Row="4" Margin="22,75,506,74"
                   Style="{StaticResource TextBlock}"
                   FontSize="15"
                   Text="Время выполнения: " RenderTransformOrigin="0.501,-0.219"
                   />
        <TextBlock Grid.Row="4"
                   Margin="184,75,435,82"
                   FontSize="15"
                   Text="{Binding AlgoTime}"
                   Style="{StaticResource TextBlock}"/>
        <CheckBox x:Name="IsFullRecord" 
                  Content="Полный отчет"
                  IsChecked="{Binding IsFullRecord}"
                  Grid.Row="4" Margin="461,30,83,117" 
                  Style="{StaticResource CheckBox}"/>

    </Grid>
</UserControl>
